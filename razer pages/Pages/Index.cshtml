@page
@model IndexModel
@{
    // sets title for page
    ViewData["Title"] = "Home page";
}
<div style="background-color:white">
    <header class="text-center">
        <h1 class="display-4">Razer Currency Convertor - GBP To EUROs</h1>
        <h2>By Mohammed</h2>
    </header>
    <br/><br/>
</div>

@* form for taking currency input *@
 <form method="post" class="text-left">
        <div class="form-group">
            <label for="GBP" class="col-sm-2">Input GBP Amount:</label>
            <div class="col-col-4">
                <input type="number" class="form-control" asp-for="GBP">
            </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
    <button type="submit" class="btn btn-primary">Convert</button>
    </div>
        <p> @ViewData["Convert"]</p>
   </div>

     
</form>